<div>
  <h1 class="title">99Cats</h1>

  <h3>Rent a cat for your lonely, lonely weekend</h3>

  <% unless @cats.empty? %>
    <ul>
      <% @cats.each do |cat| %>
        <li><%= link_to cat.name, cat_url(cat) %></li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to "Rent out your own cat", new_cat_url %>
</div>
