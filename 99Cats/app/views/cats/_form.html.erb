<form action="<%= http_dest %>" method="post">
  <input type="hidden" name="_method" value="<%= form_method %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label for="cat-birth-year">Year born</label>
  <input type="date" name="cat[birth_date]" id="cat-birth-date" value="<%= cat.birth_date %>"><br/>

  <label for="cat_coat_color">Color &nbsp;</label>
  <select name="cat[color]" id="cat_coat_color">
    <option value="red">Red</option>
    <option value="black">Black</option>
    <option value="white">White</option>
    <option value="brown">Brown</option>
    <option value="calico">Calico</option>
</select><br/>

  <label for="cat-name">Name</label>
  <input type="text" name="cat[name]" id="cat-name" value="<%= cat.name %>"><br/>

    <input type="radio" name="cat[sex]" id="cat_sex_female" value="F">
    <label for="cat_sex_female">Female</label>
    <br>

    <input type="radio" name="cat[sex]" id="cat_sex_male" value="M">
    <label for="cat_sex_male">Male</label>
    <br>

  <label for="cat-description">Description</label>
  <input type="textarea" name="cat[description]" id="cat-description" value="<%= cat.description %>"><br/>

  <input type="submit" value="<%= submit_text %>">

</form>
